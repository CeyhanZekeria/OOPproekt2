<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="bg.autosalon.controllers.AddEmployeeController"
      spacing="15" alignment="CENTER"
      style="-fx-padding: 30; -fx-background-color: white;">

    <Label text="Нов Служител" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <HBox spacing="10">
        <TextField fx:id="firstNameField" promptText="Име" HBox.hgrow="ALWAYS"/>
        <TextField fx:id="lastNameField" promptText="Фамилия" HBox.hgrow="ALWAYS"/>
    </HBox>

    <TextField fx:id="emailField" promptText="Служебен Email"/>
    <TextField fx:id="phoneField" promptText="Телефон"/>

    <PasswordField fx:id="passwordField" promptText="Парола за достъп"/>

    <Separator/>

    <Label text="Допълнителни данни:" style="-fx-font-size: 12px; -fx-text-fill: gray;" maxWidth="Infinity"/>
    <TextField fx:id="salaryField" promptText="Заплата (лв.)"/>

    <Label fx:id="errorLabel" textFill="red" wrapText="true"/>

    <HBox spacing="15" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
        <Button text="Създай" onAction="#onSave"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 100;"/>
        <Button text="Отказ" onAction="#onCancel"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-pref-width: 100;"/>
    </HBox>

</VBox>