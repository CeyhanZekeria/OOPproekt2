<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.DropShadow?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="bg.autosalon.controllers.AddCarController"
      spacing="20" alignment="TOP_CENTER"
      prefWidth="500" prefHeight="650"
      style="-fx-padding: 40; -fx-background-color: white;">

    <Label text="New Car"
           style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
        <effect>
            <DropShadow color="#00000033" radius="5" offsetY="2"/>
        </effect>
    </Label>

    <Separator style="-fx-background-color: #ecf0f1;"/>

    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Basic Information" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>
        <HBox spacing="15">
            <TextField fx:id="brandField" promptText="Brand (e.g. BMW)" HBox.hgrow="ALWAYS"
                       style="-fx-background-radius: 5; -fx-padding: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>

            <TextField fx:id="modelField" promptText="Model (e.g. X5)" HBox.hgrow="ALWAYS"
                       style="-fx-background-radius: 5; -fx-padding: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>
        </HBox>
    </VBox>

    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Identification (VIN)" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>
        <TextField fx:id="vinField" promptText="Enter VIN number"
                   style="-fx-background-radius: 5; -fx-padding: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>
    </VBox>

    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Specifications" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>
        <HBox spacing="15">
            <TextField fx:id="yearField" promptText="Year" HBox.hgrow="ALWAYS"
                       style="-fx-background-radius: 5; -fx-padding: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>

            <TextField fx:id="mileageField" promptText="Mileage (km)" HBox.hgrow="ALWAYS"
                       style="-fx-background-radius: 5; -fx-padding: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>
        </HBox>
    </VBox>

    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Sales Details" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>
        <HBox spacing="15">
            <TextField fx:id="priceField" promptText="Price (BGN)" HBox.hgrow="ALWAYS"
                       style="-fx-background-radius: 5; -fx-padding: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>

            <ComboBox fx:id="fuelComboBox" promptText="Fuel Type" HBox.hgrow="ALWAYS" maxWidth="Infinity"
                      style="-fx-background-radius: 5; -fx-padding: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-font-size: 13px;"/>
        </HBox>
    </VBox>

    <Region VBox.vgrow="ALWAYS"/>

    <Label fx:id="errorLabel" textFill="#e74c3c" wrapText="true" style="-fx-font-size: 13px;"/>

    <Separator style="-fx-background-color: #ecf0f1;"/>

    <HBox spacing="20" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
        <Button text="Save" onAction="#onSave"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 150; -fx-padding: 10; -fx-background-radius: 5; -fx-cursor: hand;">
            <effect>
                <DropShadow color="#00000022" radius="3" offsetY="2"/>
            </effect>
        </Button>

        <Button text="Cancel" onAction="#onCancel"
                style="-fx-background-color: #ecf0f1; -fx-text-fill: #7f8c8d; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 150; -fx-padding: 10; -fx-background-radius: 5; -fx-cursor: hand;"/>
    </HBox>

</VBox>