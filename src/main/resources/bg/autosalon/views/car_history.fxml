<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="bg.autosalon.controllers.CarHistoryController"
      spacing="15"
      style="-fx-padding: 20; -fx-background-color: white;">

    <Label fx:id="carTitleLabel" text="Car History"
           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <Separator/>

    <Label text="Sales History" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
    <TableView fx:id="salesTable" prefHeight="150">
        <columns>
            <TableColumn fx:id="colSaleDate" text="Date" prefWidth="120"/>
            <TableColumn fx:id="colClient" text="Client" prefWidth="200"/>
            <TableColumn fx:id="colPrice" text="Price" prefWidth="120"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <Label text="Service &amp; Repairs" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #e67e22;"/>
    <TableView fx:id="serviceTable" prefHeight="200" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colServiceDate" text="Date" prefWidth="120"/>
            <TableColumn fx:id="colDescription" text="Description" prefWidth="250"/>
            <TableColumn fx:id="colServicePrice" text="Cost" prefWidth="100"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

</VBox>