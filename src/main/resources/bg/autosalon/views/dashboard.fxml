<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.effect.DropShadow?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="bg.autosalon.controllers.DashboardController"
            prefWidth="1000" prefHeight="700"
            style="-fx-background-color: #f4f6f8;">

    <left>
        <VBox spacing="0" prefWidth="220"
              style="-fx-background-color: linear-gradient(to bottom, #1e3c72, #2a5298);">

            <effect>
                <DropShadow color="rgba(0,0,0,0.3)" radius="10" spread="0.1"/>
            </effect>

            <VBox alignment="CENTER" spacing="5" style="-fx-padding: 30 0 30 0;">
                <Label text="AUTOSALON"
                       style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold; -fx-letter-spacing: 2;"/>
                <Label text="Management System"
                       style="-fx-text-fill: #aec6cf; -fx-font-size: 12px;"/>
            </VBox>

            <Separator style="-fx-background-color: #34495e; -fx-opacity: 0.3;"/>

            <VBox alignment="CENTER" style="-fx-padding: 20;">
                <Label fx:id="userLabel" text="Welcome, User" wrapText="true" textAlignment="CENTER"
                       style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            </VBox>

            <Separator style="-fx-background-color: #34495e; -fx-opacity: 0.3;"/>

            <VBox spacing="5" style="-fx-padding: 10;">

                <Button fx:id="btnCars" text="Vehicles" onAction="#openCars" maxWidth="Infinity" alignment="BASELINE_LEFT"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand; -fx-padding: 12 20;"/>

                <Button fx:id="btnClients" text="Clients" onAction="#openClients" maxWidth="Infinity" alignment="BASELINE_LEFT"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand; -fx-padding: 12 20;"/>

                <Button fx:id="btnEmployees" text="Employees" onAction="#openEmployees" maxWidth="Infinity" alignment="BASELINE_LEFT"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand; -fx-padding: 12 20;"/>

                <Button fx:id="btnSales" text="Sales" onAction="#openSales" maxWidth="Infinity" alignment="BASELINE_LEFT"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand; -fx-padding: 12 20;"/>

                <Button fx:id="btnService" text="Service" onAction="#openService" maxWidth="Infinity" alignment="BASELINE_LEFT"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand; -fx-padding: 12 20;"/>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>

            <Separator style="-fx-background-color: #34495e; -fx-opacity: 0.3;"/>

            <Button text="Exit" onAction="#logout" maxWidth="Infinity"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 15;"
                    VBox.vgrow="NEVER"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane" style="-fx-padding: 20;">
            <Label text="Welcome!" style="-fx-font-size: 24px; -fx-text-fill: #7f8c8d;"/>
        </StackPane>
    </center>

</BorderPane>