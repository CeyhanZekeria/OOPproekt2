<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="bg.autosalon.controllers.DashboardController"
            prefWidth="1000" prefHeight="700"
            style="-fx-background-color: #f4f6f8;">

    <left>
        <VBox spacing="0" prefWidth="220"
              style="-fx-background-color: linear-gradient(to bottom, #1e3c72, #2a5298);">

            <effect>
                <DropShadow color="rgba(0,0,0,0.3)" radius="10" spread="0.1"/>
            </effect>

            <VBox alignment="CENTER" spacing="5" style="-fx-padding: 30 0 30 0;">
                <Label text="AUTOSALON"
                       style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold; -fx-letter-spacing: 2;"/>
                <Label text="Management System"
                       style="-fx-text-fill: #aec6cf; -fx-font-size: 12px;"/>
            </VBox>

            <Separator style="-fx-background-color: #34495e; -fx-opacity: 0.3;"/>

            <VBox alignment="CENTER" style="-fx-padding: 20;">
                <Label fx:id="userLabel" text="Welcome" wrapText="true" textAlignment="CENTER"
                       style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            </VBox>

            <Separator style="-fx-background-color: #34495e; -fx-opacity: 0.3;"/>

            <VBox spacing="5" style="-fx-padding: 10;">

                <Button text="Home" onAction="#openHome" maxWidth="Infinity" alignment="BASELINE_LEFT"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand; -fx-padding: 12 20; -fx-font-weight: bold;"/>

                <Button fx:id="btnCars" text="Cars" onAction="#openCars" maxWidth="Infinity" alignment="BASELINE_LEFT"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand; -fx-padding: 12 20;"/>

                <Button fx:id="btnClients" text="Clients" onAction="#openClients" maxWidth="Infinity" alignment="BASELINE_LEFT"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand; -fx-padding: 12 20;"/>

                <Button fx:id="btnEmployees" text="Employees" onAction="#openEmployees" maxWidth="Infinity" alignment="BASELINE_LEFT"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand; -fx-padding: 12 20;"/>

                <Button fx:id="btnSales" text="Sales" onAction="#openSales" maxWidth="Infinity" alignment="BASELINE_LEFT"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand; -fx-padding: 12 20;"/>

                <Button fx:id="btnService" text="Service" onAction="#openService" maxWidth="Infinity" alignment="BASELINE_LEFT"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand; -fx-padding: 12 20;"/>

                <Button fx:id="btnRequests" text="Requests" onAction="#openRequests" maxWidth="Infinity" alignment="BASELINE_LEFT"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand; -fx-padding: 12 20;"/>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>
            <Separator style="-fx-background-color: #34495e; -fx-opacity: 0.3;"/>

            <Button text="Logout" onAction="#logout" maxWidth="Infinity"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 15;"
                    VBox.vgrow="NEVER"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane" style="-fx-padding: 30;">

            <VBox fx:id="dashboardHome" spacing="30">
                <Label text="Dashboard Overview"
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                <HBox spacing="20" alignment="CENTER_LEFT">
                    <VBox style="-fx-background-color: linear-gradient(to right, #3498db, #2980b9); -fx-background-radius: 10; -fx-padding: 20; -fx-min-width: 200;">
                        <effect><DropShadow color="#00000033" radius="5" offsetY="3"/></effect>
                        <Label text="Available Cars" textFill="white" style="-fx-font-size: 14px;"/>
                        <Label fx:id="totalCarsLabel" text="0" textFill="white" style="-fx-font-size: 36px; -fx-font-weight: bold;"/>
                    </VBox>

                    <VBox fx:id="revenueCard" style="-fx-background-color: linear-gradient(to right, #2ecc71, #27ae60); -fx-background-radius: 10; -fx-padding: 20; -fx-min-width: 200;">
                        <effect><DropShadow color="#00000033" radius="5" offsetY="3"/></effect>
                        <Label text="Total Revenue (BGN)" textFill="white" style="-fx-font-size: 14px;"/>
                        <Label fx:id="totalSalesLabel" text="0 лв." textFill="white" style="-fx-font-size: 36px; -fx-font-weight: bold;"/>
                    </VBox>

                    <VBox fx:id="clientsCard" style="-fx-background-color: linear-gradient(to right, #9b59b6, #8e44ad); -fx-background-radius: 10; -fx-padding: 20; -fx-min-width: 200;">
                        <effect><DropShadow color="#00000033" radius="5" offsetY="3"/></effect>
                        <Label text="Active Clients" textFill="white" style="-fx-font-size: 14px;"/>
                        <Label fx:id="totalClientsLabel" text="0" textFill="white" style="-fx-font-size: 36px; -fx-font-weight: bold;"/>
                    </VBox>
                </HBox>

                <VBox fx:id="quickActionsBox" spacing="10">
                    <Label text="Quick Actions" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #7f8c8d; -fx-padding: 20 0 0 0;"/>
                    <HBox spacing="15">
                        <Button text="Add Car" onAction="#openCars" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10 20; -fx-cursor: hand;"/>
                        <Button text="New Sale" onAction="#openSales" style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10 20; -fx-cursor: hand;"/>
                    </HBox>
                </VBox>

            </VBox>
        </StackPane>
    </center>

</BorderPane>