<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="bg.autosalon.controllers.DashboardController">

    <left>
        <VBox spacing="10" prefWidth="180" style="-fx-background-color: #2c3e50;" alignment="TOP_CENTER">
            <Label text="Dashboard" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 20 0 20 0;"/>

            <Button text="Cars" onAction="#openCars" prefWidth="150"/>
            <Button text="Clients" onAction="#openClients" prefWidth="150"/>
            <Button text="Employees" onAction="#openEmployees" prefWidth="150"/>
            <Button text="Sales" onAction="#openSales" prefWidth="150"/>
            <Button text="Service" onAction="#openService" prefWidth="150"/>

            <Separator/>

            <Button text="Logout" onAction="#logout" prefWidth="150"/>
        </VBox>
    </left>

    <center>
        <AnchorPane fx:id="contentPane"/>
    </center>

</BorderPane>
