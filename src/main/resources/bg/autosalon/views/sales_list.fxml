<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.DropShadow?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="bg.autosalon.controllers.SaleListController"
      spacing="20"
      style="-fx-padding: 30; -fx-background-color: transparent;">

    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="Sales Register"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <effect>
                <DropShadow color="#00000033" radius="2" offsetY="1"/>
            </effect>
        </Label>

        <Region HBox.hgrow="ALWAYS"/>

        <Button text="+ New Sale" onAction="#onAddSale"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 8 20; -fx-background-radius: 5;"/>

        <Button text="Edit" onAction="#onEditSale"
                style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 8 20; -fx-background-radius: 5;"/>

        <Button text="Delete" onAction="#onDeleteSale"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 8 20; -fx-background-radius: 5;"/>
    </HBox>

    <TableView fx:id="salesTable" VBox.vgrow="ALWAYS"
               style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
        <columns>
            <TableColumn fx:id="colCar" text="Car" prefWidth="150"/>
            <TableColumn fx:id="colClient" text="Client" prefWidth="150"/>
            <TableColumn fx:id="colEmployee" text="Seller" prefWidth="150"/>
            <TableColumn fx:id="colDate" text="Date" prefWidth="100"/>
            <TableColumn fx:id="colPrice" text="Price" prefWidth="100"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

</VBox>