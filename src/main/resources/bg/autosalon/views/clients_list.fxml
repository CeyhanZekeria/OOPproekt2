<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.DropShadow?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="bg.autosalon.controllers.ClientListController"
      spacing="20" style="-fx-padding: 20;">

    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label text="Clients" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="+ New client" onAction="#onAddClient" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
    </HBox>

    <TableView fx:id="clientsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colFirstName" text="First name" prefWidth="120"/>
            <TableColumn fx:id="colLastName" text="Last name" prefWidth="120"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="180"/>
            <TableColumn fx:id="colPhone" text="Phone" prefWidth="120"/>
            <TableColumn fx:id="colPoints" text="Loyalty points" prefWidth="100"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <effect>
            <DropShadow color="rgba(0,0,0,0.1)" radius="5"/>
        </effect>
    </TableView>
</VBox>