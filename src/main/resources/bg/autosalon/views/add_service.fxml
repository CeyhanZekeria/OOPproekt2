<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.DropShadow?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="bg.autosalon.controllers.AddServiceController"
      spacing="20" alignment="TOP_CENTER" prefWidth="500" prefHeight="600"
      style="-fx-padding: 40; -fx-background-color: white;">

    <Label text="New Service Appointment" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
        <effect><DropShadow color="#00000033" radius="5" offsetY="2"/></effect>
    </Label>
    <Separator style="-fx-background-color: #ecf0f1;"/>

    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Vehicle" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>
        <ComboBox fx:id="carCombo" promptText="-- Select Car --" maxWidth="Infinity" style="-fx-background-radius: 5; -fx-padding: 5; -fx-border-color: #bdc3c7;"/>
    </VBox>

    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Service Details" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>
        <HBox spacing="15">
            <ComboBox fx:id="typeCombo" promptText="Type" HBox.hgrow="ALWAYS" maxWidth="Infinity" style="-fx-background-radius: 5; -fx-padding: 5; -fx-border-color: #bdc3c7;"/>
            <DatePicker fx:id="datePicker" promptText="Date" HBox.hgrow="ALWAYS" maxWidth="Infinity" style="-fx-background-radius: 5; -fx-border-color: #bdc3c7;"/>
        </HBox>
    </VBox>

    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Cost" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>
        <TextField fx:id="priceField" promptText="Price (BGN)" style="-fx-background-radius: 5; -fx-padding: 10; -fx-border-color: #bdc3c7;"/>
    </VBox>

    <VBox spacing="5" alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
        <Label text="Description" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>
        <TextArea fx:id="descArea" promptText="Details..." wrapText="true" VBox.vgrow="ALWAYS" style="-fx-background-radius: 5; -fx-border-color: #bdc3c7;"/>
    </VBox>

    <Label fx:id="errorLabel" textFill="#e74c3c" wrapText="true"/>
    <HBox spacing="20" alignment="CENTER">
        <Button text="Save" onAction="#onSave" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 150; -fx-padding: 10; -fx-cursor: hand;"/>
        <Button text="Cancel" onAction="#onCancel" style="-fx-background-color: #ecf0f1; -fx-text-fill: #7f8c8d; -fx-font-weight: bold; -fx-pref-width: 150; -fx-padding: 10; -fx-cursor: hand;"/>
    </HBox>
</VBox>