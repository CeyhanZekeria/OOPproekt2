<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.DropShadow?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="bg.autosalon.controllers.MyNotificationsController"
      spacing="20"
      style="-fx-padding: 30; -fx-background-color: transparent;">

    <Label text="My Notifications"
           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
        <effect>
            <DropShadow color="#00000033" radius="2" offsetY="1"/>
        </effect>
    </Label>

    <TableView fx:id="notifTable" VBox.vgrow="ALWAYS"
               style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
        <columns>
            <TableColumn fx:id="colDate" text="Date received" prefWidth="160"/>
            <TableColumn fx:id="colMessage" text="Message" prefWidth="450"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

</VBox>