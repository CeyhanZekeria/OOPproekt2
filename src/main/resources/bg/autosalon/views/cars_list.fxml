<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="bg.autosalon.controllers.CarListController"
      spacing="20"
      style="-fx-padding: 20; -fx-background-color: transparent;">

    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label text="Налични Автомобили"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Button text="+ Добави Кола" onAction="#onAddCar"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 8 15; -fx-background-radius: 5;"/>

        <Button text="Изтрий избраните" onAction="#onDeleteCar"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-cursor: hand; -fx-padding: 8 15; -fx-background-radius: 5;"/>
    </HBox>

    <TableView fx:id="carsTable" VBox.vgrow="ALWAYS" style="-fx-base: #ecf0f1; -fx-control-inner-background: white;">
        <columns>
            <TableColumn fx:id="colBrand" text="Марка" prefWidth="120"/>
            <TableColumn fx:id="colModel" text="Модел" prefWidth="120"/>
            <TableColumn fx:id="colVin" text="VIN" prefWidth="150"/>
            <TableColumn fx:id="colYear" text="Година" prefWidth="80"/>
            <TableColumn fx:id="colFuel" text="Гориво" prefWidth="100"/>
            <TableColumn fx:id="colPrice" text="Цена (лв.)" prefWidth="100"/>
            <TableColumn fx:id="colStatus" text="Статус" prefWidth="100"/>
        </columns>

        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>

        <effect>
            <DropShadow color="rgba(0,0,0,0.1)" radius="5"/>
        </effect>
    </TableView>

</VBox>