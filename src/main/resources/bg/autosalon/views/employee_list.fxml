<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.DropShadow?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="bg.autosalon.controllers.EmployeeListController"
      spacing="20" style="-fx-padding: 20;">

    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label text="Employees" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="+ Нов Служител" onAction="#onAddEmployee"
                style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
    </HBox>

    <TableView fx:id="employeesTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colName" text="Name" prefWidth="150"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
            <TableColumn fx:id="colPhone" text="Phone" prefWidth="120"/>
            <TableColumn fx:id="colSalary" text="Salary" prefWidth="100"/>
            <TableColumn fx:id="colRole" text="Role" prefWidth="100"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <effect>
            <DropShadow color="rgba(0,0,0,0.1)" radius="5"/>
        </effect>
    </TableView>
</VBox>