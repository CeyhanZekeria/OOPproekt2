<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="bg.autosalon.controllers.LoginController"
           prefWidth="600" prefHeight="500"
           style="-fx-background-color: linear-gradient(to bottom right, #1e3c72, #2a5298);">

    <VBox spacing="20" alignment="CENTER" maxWidth="350" maxHeight="400"
          style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40;">

        <effect>
            <DropShadow color="rgba(0,0,0,0.4)" radius="20" spread="0.1"/>
        </effect>

        <Label text="Login"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

        <VBox spacing="15">
            <TextField fx:id="emailField" promptText="Email"
                       style="-fx-background-color: #f0f2f5; -fx-border-color: transparent; -fx-padding: 10;"/>

            <PasswordField fx:id="passwordField" promptText="Password"
                           style="-fx-background-color: #f0f2f5; -fx-border-color: transparent; -fx-padding: 10;"/>
        </VBox>

        <Label fx:id="errorLabel" textFill="#e74c3c"/>

        <Button text="LOGIN" onAction="#onLogin" maxWidth="Infinity"
                style="-fx-background-color: #1e3c72; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 10; -fx-background-radius: 5;"/>

        <HBox alignment="CENTER" spacing="5">
            <Label text="Don't have account?" textFill="gray"/>
            <Hyperlink text="Register" onAction="#openRegister"
                       style="-fx-text-fill: #1e3c72; -fx-border-color: transparent; -fx-underline: true;"/>
        </HBox>

    </VBox>

</StackPane>