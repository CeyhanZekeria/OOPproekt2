<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="bg.autosalon.controllers.AddClientController"
      spacing="15" alignment="CENTER"
      style="-fx-padding: 30; -fx-background-color: white;">

    <Label text="New client" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <TextField fx:id="firstNameField" promptText="Name"/>
    <TextField fx:id="lastNameField" promptText="Last Name"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <TextField fx:id="phoneField" promptText="Phone"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>

    <Label fx:id="errorLabel" textFill="red"/>

    <HBox spacing="15" alignment="CENTER">
        <Button text="Save" onAction="#onSave" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
        <Button text="Cancel" onAction="#onCancel"/>
    </HBox>
</VBox>