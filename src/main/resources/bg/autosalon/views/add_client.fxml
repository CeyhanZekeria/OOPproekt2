<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="bg.autosalon.controllers.AddClientController"
      spacing="20" alignment="TOP_CENTER"
      prefWidth="450" prefHeight="550"
      style="-fx-padding: 40; -fx-background-color: white;">

    <Label text="New Client"
           style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
        <effect>
            <DropShadow color="#00000033" radius="5" offsetY="2"/>
        </effect>
    </Label>

    <Separator style="-fx-background-color: #ecf0f1;"/>

    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Personal Information" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>

        <HBox spacing="15">
            <TextField fx:id="firstNameField" promptText="First Name" HBox.hgrow="ALWAYS"
                       style="-fx-background-radius: 5; -fx-padding: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>

            <TextField fx:id="lastNameField" promptText="Last Name" HBox.hgrow="ALWAYS"
                       style="-fx-background-radius: 5; -fx-padding: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>
        </HBox>
    </VBox>

    <VBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Contact Details" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>

        <TextField fx:id="emailField" promptText="Email Address"
                   style="-fx-background-radius: 5; -fx-padding: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>

        <TextField fx:id="phoneField" promptText="Phone Number"
                   style="-fx-background-radius: 5; -fx-padding: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>
    </VBox>

    <VBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Security &amp; Login" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>

        <PasswordField fx:id="passwordField" promptText="Password"
                       style="-fx-background-radius: 5; -fx-padding: 10; -fx-border-color: #bdc3c7; -fx-border-radius: 5;"/>
    </VBox>

    <Region VBox.vgrow="ALWAYS"/>

    <Label fx:id="errorLabel" textFill="#e74c3c" wrapText="true" style="-fx-font-size: 13px;"/>

    <Separator style="-fx-background-color: #ecf0f1;"/>

    <HBox spacing="20" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
        <Button text="Save" onAction="#onSave"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 140; -fx-padding: 10; -fx-background-radius: 5; -fx-cursor: hand;">
            <effect>
                <DropShadow color="#00000022" radius="3" offsetY="2"/>
            </effect>
        </Button>

        <Button text="Cancel" onAction="#onCancel"
                style="-fx-background-color: #ecf0f1; -fx-text-fill: #7f8c8d; -fx-font-weight: bold; -fx-font-size: 14px; -fx-pref-width: 140; -fx-padding: 10; -fx-background-radius: 5; -fx-cursor: hand;"/>
    </HBox>

</VBox>